<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Reduce log level for controllers during tests -->
    <!-- Expected errors in tests will not be logged with stacktrace -->
    <logger name="pro.softcom.sentinelle.infrastructure.confluence.adapter.in" level="WARN"/>

    <!-- Default configuration for other packages -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
