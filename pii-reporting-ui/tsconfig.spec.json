{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc/spec",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@angular/core/testing": [
        "node_modules/@angular/core/types/testing.d.ts"
      ]
    }
  },
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
